#include <bits/stdc++.h>

using namespace std;

int main()
{
    int i=0,n,k,e=100;
    cin>>n>>k;
    vector<int>arr(n);
    for(int j=0;j<n;j++)
        cin>>arr[j];
    i=(i+k)%n;
    if(arr[i]==1)
        e=e-3;
    else
        e=e-1;
    while(i!=0)
    {
        i=(i+k)%n;
    if(arr[i]==1)
        e=e-3;
    else
        e=e-1;
    }
    cout<<e;
    
}
    
