#include <bits/stdc++.h>

using namespace std;


int main()
{
       int n,i,j=0;
    cin >> n;

    vector<int> c(n);

    for ( i = 0; i < n; i++) {
        cin>>c[i];
    }
    i=0;
    while(i<n-1)
    {
        if(c[i+2]==1||(i+2)>n-1)
        {
            i++;
            j++;
        }
        else {
            i=i+2;
        j++;}
            
    }
    cout<<j;
    return 0;
}
